
@{
    ViewBag.Title = "Images";
}

<style>
    h2{
        font-size: 5rem;
    }
</style>

<h1 class="TituloImagenes">Las mejores imagenes de tus autos deportivos favoritos</h1>

<hr />
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>

        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Content/fullsize/1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/fullsize/2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/fullsize/3.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/fullsize/4.jpg" alt="Four slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/fullsize/5.jpg" alt="Five slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/fullsize/6.jpg" alt="Six slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>
<hr />
    <h2 class="SubTituloImagenes">Imagenes</h2>
    <hr />
    <div class="Imgs">
         <img src="~/Content/fullsize/1.jpg" alt="First slide">
         <img src="~/Content/fullsize/2.jpg" alt="Second slide">
         <img src="~/Content/fullsize/3.jpg" alt="Third slide">
         <img src="~/Content/fullsize/4.jpg" alt="Four slide">
         <img src="~/Content/fullsize/5.jpg" alt="Five slide">
         <img src="~/Content/fullsize/6.jpg" alt="Six slide">
    </div>